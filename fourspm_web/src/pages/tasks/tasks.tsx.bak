import React, { ReactElement } from 'react';
import 'devextreme/data/odata/store';
import DataGrid, {
  Column,
  Pager,
  Paging,
  FilterRow,
} from 'devextreme-react/data-grid';
import { createStore } from 'devextreme-aspnet-data-nojquery';

interface Priority {
  name: string;
  value: number;
}

const dataSource = {
  store: createStore({
    key: 'Task_ID',
    loadUrl: 'https://js.devexpress.com/Demos/DevAV/odata/Tasks',
    onBeforeSend: (operation, ajaxSettings) => {
      if (operation === 'load') {
        // Customize the request here if needed
        ajaxSettings.data = {
          ...ajaxSettings.data,
          $expand: 'ResponsibleEmployee',
          $select: [
            'Task_ID',
            'Task_Subject',
            'Task_Start_Date',
            'Task_Due_Date',
            'Task_Status',
            'Task_Priority',
            'Task_Completion',
            'ResponsibleEmployee/Employee_Full_Name'
          ].join(',')
        };
      }
    }
  })
};

export default function Task(): ReactElement {
  return (
    <React.Fragment>
      <h2 className={'content-block'}>Tasks</h2>

      <DataGrid
        className={'dx-card wide-card'}
        dataSource={dataSource}
        showBorders={false}
        focusedRowEnabled={true}
        defaultFocusedRowIndex={0}
        columnAutoWidth={true}
        columnHidingEnabled={true}
      >
        <Paging defaultPageSize={10} />
        <Pager showPageSizeSelector={true} showInfo={true} />
        <FilterRow visible={true} />

        <Column dataField={'Task_ID'} width={90} hidingPriority={2} />
        <Column
          dataField={'Task_Subject'}
          width={190}
          caption={'Subject'}
          hidingPriority={8}
        />
        <Column
          dataField={'Task_Start_Date'}
          caption={'Start Date'}
          dataType={'date'}
          hidingPriority={6}
        />
        <Column
          dataField={'Task_Due_Date'}
          caption={'Due Date'}
          dataType={'date'}
          hidingPriority={5}
        />
        <Column
          dataField={'Task_Status'}
          caption={'Status'}
          hidingPriority={7}
        />
        <Column
          dataField={'Task_Priority'}
          caption={'Priority'}
          hidingPriority={1}
        />
        <Column
          dataField={'Task_Completion'}
          caption={'Completion'}
          hidingPriority={4}
        />
        <Column
          dataField={'ResponsibleEmployee.Employee_Full_Name'}
          caption={'Responsible'}
          allowSorting={false}
          hidingPriority={3}
        />
      </DataGrid>
    </React.Fragment>
  );
}

const priorities: Priority[] = [
  { name: 'High', value: 4 },
  { name: 'Urgent', value: 3 },
  { name: 'Normal', value: 2 },
  { name: 'Low', value: 1 }
];
